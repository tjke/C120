<body>
	<!-- main content of the page goes here -->
	<div class="main">
		<!--Organization title-->
		<div class="page-title" style="background-color: {{darkerColor}}">Organizations</div>
		<center>Here are some organizations related to today's theme that you can check out and donate to!</center><br>
		<!--The list of organizations-->
		<div class="list text-center">
			{{#each orgs}}
			<div class="well well-lg">
			<div class="row">
				<!--org content-->
				<div class="col-xs-12">
					<a href={{orgURL}} class="medium-font"><b>{{orgName}}</b></a>
					<p>{{orgSummary}}</p>
				</div>
				<!--Donate button-->
				<div class="col-xs-12">
					<a href={{donateURL}}>
						<div class="btn btn-primary btn-default-ghost btn-sm donate-btn">Donate</div>
					</a>
				</div>
			</div>
			</div>
			{{/each}}
		</div>
	</div><!--/main-->

	<!-- top header: shows date and theme -->
	<div class="top-header">
		<div class="date-square navbar-btn-home" style="background-color: {{darkerColor}}">
			<a href="/">{{mon}}<br>{{date}}</a>
		</div>
		<div class="heading-theme navbar-btn-home" style="background-color: {{color}}">
			<a href="/">{{theme}}</a>
		</div>
	</div><!--/header-->

	<!-- bottom navbar -->
	<div class="bottom-navbar">
		<div class="col-5 navbar-font navbar-btn-home" style="background-color: {{color}}"><a href="/"><i class="fa fa-home fa-3x" aria-hidden="true"></i><br>Home</a></div>
		<div class="col-5 navbar-small-font navbar-btn-challenge" style="background-color: {{color}}"><a href="/challenge"><i class="fa fa-calendar-check-o fa-3x" aria-hidden="true"></i><br>Challenge</a></div>
		<div class="col-5 navbar-small-font" style="background-color: {{darkerColor}}"><i class="fa fa-heart fa-3x" aria-hidden="true"></i><br>Organizations</div>
		<div class="col-5 navbar-font navbar-btn-news" style="background-color: {{color}}"><a href="/news"><i class="fa fa-newspaper-o fa-3x" aria-hidden="true"></i><br>News</a></div>
		<div class="col-5 navbar-font navbar-btn-trophies" style="background-color: {{color}}"><a href="/trophies"><i class="fa fa-trophy fa-3x" aria-hidden="true"></i><br>Trophies</a></div>
	</div><!--/navbar-->

