<body>
	<!-- main content of the page goes here -->
	<div class="main">
		<!--Organization title-->
		<div class="page-title" style="background-color: {{darkerColor}}">Organizations</div>
		
		<!--The list of organizations-->
		<div class="list text-center">
			{{#each orgs}}
			<div class="well well-lg">
				<a href={{orgURL}}><h4>{{orgName}}</h4></a>
				<p>{{orgSummary}}</p>
			</div>
			{{/each}}
		</div>
	</div><!--/main-->

	<!-- top header: shows date and theme -->
	<div class="top-header">
		<div class="date-square" style="background-color: {{darkerColor}}">
			{{mon}}<br>{{date}}
		</div>
		<div class="heading-theme" style="background-color: {{color}}">
			{{theme}}
		</div>
	</div><!--/header-->

	<!-- bottom navbar -->
	<div class="bottom-navbar">
