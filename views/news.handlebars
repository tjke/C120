<body onload=getNews()>
	<!-- main content of the page goes here -->
	<div class="main">
		<!-- News title-->
		<div class="page-title" style="background-color: {{darkerColor}}">News</div>

		<center>
			<!--Showing {{newsLength}} results for <b>"{{query}}"</b>:-->
			<p id="newsSearchResults">{{query}}</p>
		</center>

		<div class="getNews"></div>

		<!--{{#each news}}
		<div>
			<div class="image-float"><img src={{image.thumbnail.contentUrl}}></div>
			<div>
				<h3><a href={{url}}>{{name}}</a></h3>
				<i>{{datePublished}}</i><br>
				{{description}}
			</div>
		</div>
		<hr>
		{{/each}}-->

		<!--News API credit-->
		<hr>
		<p class="small-font" id="credit">News search is powered by <a href="https://www.microsoft.com/cognitive-services/en-us/bing-news-search-api">Bing News Search API</a>.</p>
	</div><!--/main-->

	<!-- top header: shows date and theme -->
	<div class="top-header">
		<div class="date-square" style="background-color: {{darkerColor}}">
			{{mon}}<br>{{date}}
		</div>
		<div class="heading-theme navbar-btn-home" style="background-color: {{color}}">
			{{theme}}
		</div>
	</div><!--/header-->

	<!-- bottom navbar -->
	<div class="bottom-navbar">
		<div class="col-5 navbar-font navbar-btn-home" style="background-color: {{color}}"><a href="/"><i class="fa fa-home fa-3x" aria-hidden="true"></i><br>Home</a></div>
		<div class="col-5 navbar-small-font navbar-btn-challenge" style="background-color: {{color}}"><a href="/challenge"><i class="fa fa-calendar-check-o fa-3x" aria-hidden="true"></i><br>Challenge</a></div>
		<div class="col-5 navbar-small-font navbar-btn-organizations" style="background-color: {{color}}"><a href="/organizations"><i class="fa fa-heart fa-3x" aria-hidden="true"></i><br>Organizations</a></div>
		<div class="col-5 navbar-font" style="background-color: {{darkerColor}}"><i class="fa fa-newspaper-o fa-3x" aria-hidden="true"></i><br>News</div>
		<div class="col-5 navbar-font navbar-btn-trophies" style="background-color: {{color}}"><a href="/trophies"><i class="fa fa-trophy fa-3x" aria-hidden="true"></i><br>Trophies</a></div>
	</div><!--/navbar-->

